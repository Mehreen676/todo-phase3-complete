services:
  python-backend:
    build:
      context: ./backend
      dockerfile: Dockerfile
    restart: unless-stopped
    init: true
    ports:
      - "8000:8000"  # FastAPI backend
    # env_file: ./backend/.env  # Uncomment if .env file exists
    networks:
      - appnet
    depends_on:
      - typescript-frontend  # Optional: frontend may depend on backend for SSR/API calls
    # If backend requires a database or other external service, add here

  typescript-frontend:
    build:
      context: ./frontend
      dockerfile: Dockerfile
    restart: unless-stopped
    init: true
    ports:
      - "3000:3000"  # Next.js frontend
    # env_file: ./frontend/.env  # Uncomment if .env file exists
    networks:
      - appnet
    # If frontend requires backend API, ensure network connectivity

networks:
  appnet:
    driver: bridge

# No volumes section included, as no persistent data services detected
# If you add a database or other persistent service, add volumes accordingly
